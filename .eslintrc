{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [
      1, 70, 2, {
        "ignoreComments": true
      }
    ],
    "prop-types": [2]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.6",
      "flowVersion": "0.53"
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
