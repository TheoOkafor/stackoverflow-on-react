{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [
      1, 80, 2, {
        "ignoreComments": true
      }
    ],
    "react/prop-types": [1]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "16.6",
      "flowVersion": "0.53"
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "fetch": false,
    "document": false,
    "window": false,
    "Headers": false

  }
}
